<% provide(:title, 'Matricular Alunos') %>
<h1>Matricular Alunos</h1>

<% unless @courses.blank? %>
  <div class="panel panel-primary">
    <div class="panel-heading">Selecione o Curso...</div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Status</th>
          <th><%=t '.actions', :default => 'Ações' %></th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each.with_index do |s,index| %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= s.name %></td>
              <td><%= s.description %></td>
              <td><%= s.status == 1 ? 'ATIVO' : 'INATIVO' %></td>
              <td>
                <%= link_to t('.select', :default => t("helpers.links.select")),
                    matricula_curso_path(s),
                    :class => 'btn btn-primary btn-sm active' %>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
    Nenhum curso encontrado!
<% end %>